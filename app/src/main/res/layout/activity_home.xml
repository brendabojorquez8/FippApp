<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grisClaro"
    tools:context=".Home">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <ImageView
            android:id="@android:id/empty"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_gravity="left"
            android:src="@drawable/logoverde"/>

        <TableRow>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_mes"
                android:layout_width="10dp"
                android:layout_height="30dp"
                android:layout_weight="2"
                android:background="@drawable/boton_mini_verde"
                android:fontFamily="@font/roboto_bold"
                android:text="Mes"
                android:textColor="@color/blanco"
                android:textSize="14sp"
                android:layout_marginLeft="25dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_semana"
                android:layout_width="10dp"
                android:layout_height="30dp"
                android:layout_weight="2"
                android:background="@color/grisClaro"
                android:fontFamily="@font/roboto_bold"
                android:text="Semana"
                android:textColor="@color/grisOscuro"
                android:textSize="14sp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="50dp"/>
        </TableRow>

    </TableRow>

    <!--El siguiente layout es para las barras circulares-->
    <LinearLayout
        android:id="@+id/layoutCirculos"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="vertical"
        android:background="@color/grisClaro">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutLogin"
        android:layout_width="match_parent"
        android:layout_height="440dp"
        android:orientation="vertical"
        android:background="@color/blanco">

        <LinearLayout
            android:id="@+id/layoutIngresos"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@drawable/layout_secciones"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:elevation="2dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/roboto_bold"
                    android:text="ingresos"
                    android:textAllCaps="true"
                    android:textColor="@color/grisOscuro"
                    android:textSize="10sp"/>

                <ImageButton
                    android:id="@+id/btn_agregar_ingreso"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="right"
                    android:background="@drawable/boton_principal_verde"
                    android:src="@drawable/agregar"
                    android:layout_marginLeft="320dp"/>

            </TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/roboto_bold"
                android:text="10,000"
                android:textAllCaps="true"
                android:textColor="@color/grisOscuro"
                android:textSize="24sp"/>
            <!--Aquí va la barra-->

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutGastos"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@drawable/layout_secciones"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:elevation="2dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/roboto_bold"
                    android:text="gastos"
                    android:textAllCaps="true"
                    android:textColor="@color/grisOscuro"
                    android:textSize="10sp"/>

                <ImageButton
                    android:id="@+id/btn_agregar_gastos"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="right"
                    android:background="@drawable/boton_principal_rojo"
                    android:src="@drawable/agregar"
                    android:layout_marginLeft="325dp"/>


            </TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/roboto_bold"
                android:text="10,000"
                android:textAllCaps="true"
                android:textColor="@color/grisOscuro"
                android:textSize="24sp"/>
            <!--Aquí va la barra-->

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutInversion"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@drawable/layout_secciones"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:elevation="2dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/roboto_bold"
                    android:text="inversión"
                    android:textAllCaps="true"
                    android:textColor="@color/grisOscuro"
                    android:textSize="10sp"/>

                <ImageButton
                    android:id="@+id/btn_agregar_inversion"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="right"
                    android:background="@drawable/boton_principal_azul"
                    android:src="@drawable/agregar"
                    android:layout_marginLeft="315dp"/>


            </TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/roboto_bold"
                android:text="10,000"
                android:textAllCaps="true"
                android:textColor="@color/grisOscuro"
                android:textSize="24sp"/>
            <!--Aquí va la barra-->

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutAhorro"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@drawable/layout_secciones"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:elevation="2dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/roboto_bold"
                    android:text="ahorro"
                    android:textAllCaps="true"
                    android:textColor="@color/grisOscuro"
                    android:textSize="10sp"/>

                <ImageButton
                    android:id="@+id/btn_agregar_ahorro"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="right"
                    android:background="@drawable/boton_principal_morado"
                    android:src="@drawable/agregar"
                    android:layout_marginLeft="325dp"/>


            </TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/roboto_bold"
                android:text="10,000"
                android:textAllCaps="true"
                android:textColor="@color/grisOscuro"
                android:textSize="24sp"/>
            <!--Aquí va la barra-->

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/blanco">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_Ingresos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_weight="2"
            android:background="@color/blanco"
            android:drawableTop="@drawable/ingresos"
            android:fontFamily="@font/roboto_bold"
            android:text="Ingresos"
            android:textColor="@color/grisOscuro"
            android:textSize="10sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_gastos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_weight="2"
            android:background="@color/blanco"
            android:drawableTop="@drawable/gastos"
            android:fontFamily="@font/roboto_bold"
            android:text="Gastos"
            android:textColor="@color/grisOscuro"
            android:textSize="10sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_weight="2"
            android:background="@color/blanco"
            android:drawableTop="@drawable/homeverde"
            android:fontFamily="@font/roboto_bold"
            android:text="Home"
            android:textColor="@color/verdePrincipal"
            android:textSize="10sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_portafolio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_weight="2"
            android:background="@color/blanco"
            android:drawableTop="@drawable/portafolio"
            android:fontFamily="@font/roboto_bold"
            android:text="Portafolio"
            android:textColor="@color/grisOscuro"
            android:textSize="10sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_ahorro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_weight="2"
            android:background="@color/blanco"
            android:drawableTop="@drawable/ahorro"
            android:fontFamily="@font/roboto_bold"
            android:text="Ahorro"
            android:textColor="@color/grisOscuro"
            android:textSize="10sp" />

    </LinearLayout>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grisClaro"
    tools:context=".Home">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <ImageView
            android:id="@android:id/empty"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_gravity="left"
            android:src="@drawable/logoverde"/>

        <TableRow>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_mes"
                android:layout_width="10dp"
                android:layout_height="30dp"
                android:layout_weight="2"
                android:background="@drawable/boton_mini_verde"
                android:fontFamily="@font/roboto_bold"
                android:text="Mes"
                android:textColor="@color/blanco"
                android:textSize="14sp"
                android:layout_marginLeft="25dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_semana"
                android:layout_width="10dp"
                android:layout_height="30dp"
                android:layout_weight="2"
                android:background="@color/grisClaro"
                android:fontFamily="@font/roboto_bold"
                android:text="Semana"
                android:textColor="@color/grisOscuro"
                android:textSize="14sp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="50dp"/>
        </TableRow>

    </TableRow>

    <!--El siguiente layout es para las barras circulares-->
    <LinearLayout
        android:id="@+id/layoutCirculos"
        android:layout_width="match_parent"
        android:layout_height="155dp"
        android:layout_marginTop="25dp"
        android:orientation="vertical"
        android:background="@color/grisClaro"
        android:layout_gravity="center">

        <ProgressBar
            android:id="@+id/progressBarIngresosVista"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="30dp"
            android:progress="50"
            android:progressBackgroundTint="@color/gris"
            android:progressTint="@color/verdePrincipal"/>

        <ProgressBar
            android:id="@+id/progressBarGastosVista"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:progress="30"
            android:progressBackgroundTint="@color/gris"
            android:progressTint="@color/rojo"/>

        <ProgressBar
            android:id="@+id/progressBarInversionVista"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:progress="10"
            android:progressBackgroundTint="@color/gris"
            android:progressTint="@color/azul"/>

        <ProgressBar
            android:id="@+id/progressBarAhorroVista"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:progress="25"
            android:progressBackgroundTint="@color/gris"
            android:progressTint="@color/moradoPrincipal"/>

    </LinearLayout>

    <ScrollView
        android:id="@+id/layoutLogin"
        android:layout_width="match_parent"
        android:layout_height="345dp"
        android:background="@color/blanco"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <LinearLayout
                android:id="@+id/layoutIngresos"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/layout_secciones"
                android:elevation="2dp"
                android:orientation="vertical">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="3dp"
                        android:fontFamily="@font/roboto_bold"
                        android:text="ingresos"
                        android:textAllCaps="true"
                        android:textColor="@color/grisOscuro"
                        android:textSize="10sp" />

                    <ImageButton
                        android:id="@+id/btn_agregar_ingreso"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="right"
                        android:layout_marginLeft="300dp"
                        android:background="@drawable/boton_principal_verde"
                        android:src="@drawable/agregar" />

                </TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="3dp"
                    android:fontFamily="@font/roboto_bold"
                    android:text="10,000"
                    android:textAllCaps="true"
                    android:textColor="@color/grisOscuro"
                    android:textSize="24sp" />

                <ProgressBar
                    android:id="@+id/progressBarIngresos"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:progress="50"
                    android:progressBackgroundTint="@color/verdePrincipal"
                    android:progressTint="@color/verdePrincipal"/>

                <TableRow
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="3dp"
                        android:fontFamily="@font/roboto_bold"
                        android:text="1,000"
                        android:textAllCaps="true"
                        android:textColor="@color/grisOscuro"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginLeft="120dp"
                        android:layout_marginTop="3dp"
                        android:fontFamily="@font/roboto_bold"
                        android:text="10,000"
                        android:textAllCaps="true"
                        android:textColor="@color/grisOscuro"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginLeft="120dp"
                        android:layout_marginTop="3dp"
                        android:fontFamily="@font/roboto_bold"
                        android:text="20,000"
                        android:textAllCaps="true"
                        android:textColor="@color/grisOscuro"
                        android:textSize="12sp" />

                </TableRow>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutGastos"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="110dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/layout_secciones"
                android:elevation="2dp"
                android:orientation="vertical">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="3dp"
                        android:fontFamily="@font/roboto_bold"
                        android:text="gastos"
                        android:textAllCaps="true"
                        android:textColor="@color/grisOscuro"
                        android:textSize="10sp" />

                    <ImageButton
                        android:id="@+id/btn_agregar_gastos"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="right"
                        android:layout_marginLeft="310dp"
                        android:layout_marginRight="0dp"
                        android:background="@drawable/boton_principal_rojo"
                        android:src="@drawable/agregar" />

                </TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="3dp"
                    android:fontFamily="@font/roboto_bold"
                    android:text="6,000"
                    android:textAllCaps="true"
                    android:textColor="@color/grisOscuro"
                    android:textSize="24sp" />

                <ProgressBar
                    android:id="@+id/progressBarGastos"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:progress="30"
                    android:progressBackgroundTint="@color/rojo"
                    android:progressTint="@color/rojo"/>

                <TableRow
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="3dp"
                        android:fontFamily="@font/roboto_bold"
                        android:text="1,000"
                        android:textAllCaps="true"
                        android:textColor="@color/grisOscuro"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginLeft="120dp"
                        android:layout_marginTop="3dp"
                        android:fontFamily="@font/roboto_bold"
                        android:text="10,000"
                        android:textAllCaps="true"
                        android:textColor="@color/grisOscuro"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginLeft="120dp"
                        android:layout_marginTop="3dp"
                        android:fontFamily="@font/roboto_bold"
                        android:text="20,000"
                        android:textAllCaps="true"
                        android:textColor="@color/grisOscuro"
                        android:textSize="12sp" />

                </TableRow>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutInversion"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="220dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/layout_secciones"
                android:elevation="2dp"
                android:orientation="vertical">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="3dp"
                        android:fontFamily="@font/roboto_bold"
                        android:text="inversión"
                        android:textAllCaps="true"
                        android:textColor="@color/grisOscuro"
                        android:textSize="10sp" />

                    <ImageButton
                        android:id="@+id/btn_agregar_inversion"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="right"
                        android:layout_marginLeft="295dp"
                        android:background="@drawable/boton_principal_azul"
                        android:src="@drawable/agregar" />


                </TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="3dp"
                    android:fontFamily="@font/roboto_bold"
                    android:text="2,000"
                    android:textAllCaps="true"
                    android:textColor="@color/grisOscuro"
                    android:textSize="24sp" />

                <ProgressBar
                    android:id="@+id/progressBarInversion"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:progress="10"
                    android:progressBackgroundTint="@color/azul"
                    android:progressTint="@color/azul"/>

                <TableRow
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="3dp"
                        android:fontFamily="@font/roboto_bold"
                        android:text="1,000"
                        android:textAllCaps="true"
                        android:textColor="@color/grisOscuro"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginLeft="120dp"
                        android:layout_marginTop="3dp"
                        android:fontFamily="@font/roboto_bold"
                        android:text="10,000"
                        android:textAllCaps="true"
                        android:textColor="@color/grisOscuro"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginLeft="120dp"
                        android:layout_marginTop="3dp"
                        android:fontFamily="@font/roboto_bold"
                        android:text="20,000"
                        android:textAllCaps="true"
                        android:textColor="@color/grisOscuro"
                        android:textSize="12sp" />

                </TableRow>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutAhorro"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="330dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/layout_secciones"
                android:elevation="2dp"
                android:orientation="vertical">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="3dp"
                        android:fontFamily="@font/roboto_bold"
                        android:text="ahorro"
                        android:textAllCaps="true"
                        android:textColor="@color/grisOscuro"
                        android:textSize="10sp" />

                    <ImageButton
                        android:id="@+id/btn_agregar_ahorro"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="right"
                        android:layout_marginLeft="305dp"
                        android:background="@drawable/boton_principal_morado"
                        android:src="@drawable/agregar" />


                </TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="3dp"
                    android:fontFamily="@font/roboto_bold"
                    android:text="5,000"
                    android:textAllCaps="true"
                    android:textColor="@color/grisOscuro"
                    android:textSize="24sp" />

                <ProgressBar
                    android:id="@+id/progressBarAhorros"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:progress="25"
                    android:progressBackgroundTint="@color/moradoPrincipal"
                    android:progressTint="@color/moradoPrincipal"/>

                <TableRow
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="3dp"
                        android:fontFamily="@font/roboto_bold"
                        android:text="1,000"
                        android:textAllCaps="true"
                        android:textColor="@color/grisOscuro"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginLeft="120dp"
                        android:layout_marginTop="3dp"
                        android:fontFamily="@font/roboto_bold"
                        android:text="10,000"
                        android:textAllCaps="true"
                        android:textColor="@color/grisOscuro"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginLeft="120dp"
                        android:layout_marginTop="3dp"
                        android:fontFamily="@font/roboto_bold"
                        android:text="20,000"
                        android:textAllCaps="true"
                        android:textColor="@color/grisOscuro"
                        android:textSize="12sp" />

                </TableRow>

            </LinearLayout>

        </RelativeLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/blanco">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_Ingresos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_weight="2"
            android:background="@color/blanco"
            android:drawableTop="@drawable/ingresos"
            android:fontFamily="@font/roboto_bold"
            android:text="Ingresos"
            android:textColor="@color/grisOscuro"
            android:textSize="10sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_gastos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_weight="2"
            android:background="@color/blanco"
            android:drawableTop="@drawable/gastos"
            android:fontFamily="@font/roboto_bold"
            android:text="Gastos"
            android:textColor="@color/grisOscuro"
            android:textSize="10sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_weight="2"
            android:background="@color/blanco"
            android:drawableTop="@drawable/homeverde"
            android:fontFamily="@font/roboto_bold"
            android:text="Home"
            android:textColor="@color/verdePrincipal"
            android:textSize="10sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_portafolio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_weight="2"
            android:background="@color/blanco"
            android:drawableTop="@drawable/portafolio"
            android:fontFamily="@font/roboto_bold"
            android:text="Portafolio"
            android:textColor="@color/grisOscuro"
            android:textSize="10sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_ahorro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_weight="2"
            android:background="@color/blanco"
            android:drawableTop="@drawable/ahorro"
            android:fontFamily="@font/roboto_bold"
            android:text="Ahorro"
            android:textColor="@color/grisOscuro"
            android:textSize="10sp" />

    </LinearLayout>
</LinearLayout>
